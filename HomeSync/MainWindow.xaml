<Window x:Class="HomeSync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeSync"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        Loaded="Window_Loaded">
    <ScrollViewer>
        <StackPanel MaxHeight="800">
            <TextBox x:Name="remote" Text="\\home\sync"/>
            <TextBox x:Name="local" Text="C:/sync/"/>
            <Button x:Name="syncButton" Content="Sync now"/>
            <ListBox x:Name="eventLog"/>
        </StackPanel>
    </ScrollViewer>
</Window>
